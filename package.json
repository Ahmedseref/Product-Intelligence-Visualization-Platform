    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "tsx server/index.ts & vite",
    "build": "vite build && esbuild server/index.ts --bundle --platform=node --outfile=dist-server/index.js --format=cjs --external:pg-native",
    "build:prod": "npm run build",
