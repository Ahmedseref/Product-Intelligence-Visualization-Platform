    "drizzle-kit": "^0.31.8",
    "drizzle-orm": "^0.45.1",
    "esbuild": "^0.27.2",
    "express": "^5.2.1",
    "lucide-react": "^0.562.0",
    "pg": "^8.16.3",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "recharts": "^3.6.0",
    "tsx": "^4.21.0",
    "wait-on": "^9.0.3"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
